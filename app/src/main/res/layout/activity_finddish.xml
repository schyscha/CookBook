<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FindDish">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bootstrapBrand="primary"
                app:bootstrapHeading="h1"
                app:roundedCorners="false"
                android:text="Co ugotować?"
                android:textSize="36sp"
                android:id="@+id/h_finddish"/>
        <com.beardedhen.androidbootstrap.BootstrapLabel
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bootstrapBrand="info"
                app:bootstrapHeading="h5"
                app:roundedCorners="false"
                android:text="Wybierz składniki:"
                android:textSize="18sp"
                android:id="@+id/h_info"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="612dp" android:id="@+id/recyclerview"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>